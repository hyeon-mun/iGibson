{
    "name": "iGibson",
    "build": {
        "dockerfile": "Dockerfile" 
    },
    "containerEnv": {
		"DISPLAY": "",
		"XAUTHORITY": "${localEnv:XAUTHORITY}",
		"NVIDIA_VISIBLE_DEVICES": "all",
		"NVIDIA_DRIVER_CAPABILITIES": "compute,utility,graphics",
		"QT_X11_NO_MITSHM": "1",
	},
	"mounts": [
		"source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
		"source=/data,target=/data,type=bind", // for local data mount
		"source=/mnt,target=/mnt,type=bind", // for qumulo mount
		"source=/etc/passwd,target=/etc/passwd,type=bind",
		"source=/etc/group,target=/etc/group,type=bind"
	],
    "runArgs": [
		"--gpus=all",
		"--network=host",
		"--ipc=host",
		"--pid=host",
		"--uts=host",
		"--shm-size=14g",
        "--name", "igibson"
    ],
	"settings": {
		"editor.detectIndentation": false,
		"editor.insertSpaces": false,
	},
    "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
    ],
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace/igibson,type=bind,consistency=cached",
	"containerEnv": {
		"PYTHONPATH": "/workspace/igibson"
	},
	"workspaceFolder": "/workspace/igibson"
}